<div class="form-group">
    <label for="title">Title</label>
    <input required value="<%= blog.title %>" type="text" name="title" id="title" class="form-control">
</div>

<div class="form-group">
    <label for="category">Category</label>
    <input value="<%= blog.category %>" type="text" name="category" id="category" class="form-control">
</div>

<div class="form-group">
    <label for="content">Content</label>
    <textarea required name="content" id="content" class="form-control"><%= blog.content %></textarea>
</div>
<button type="submit" class="btn btn-primary">Save</button>
<a href="/" class="btn btn-secondary">Cancel</a>