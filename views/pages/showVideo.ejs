    <% if (videos.length > 0) { %>
        <title><%= videos[0].title %></title> 
    <% } %>
</head>
<body>
  <nav class="header">
    <div class="header_container">
        <a href="/" id="headerlogo"> <i class="fa-solid fa-church"></i>Pacific Church</a>
        <div class="header_toggle" id="mobile_menu">
            <span class="bar"></span>
            <span class="bar"></span>
            <span class="bar"></span>
        </div>
  
        <ul class="header_menu">
            <li class = "header_item">
                <a href="/" class="header_links">HOME</a></li>
        </ul>
    </div>
  </nav>
  <div class="video-container" style="padding-left: 40px;">
   <% if (videos.length > 0) {
        for(var i=0; i < videos.length; i++) { %>
            <span><h1 class="mb-2" style="padding-top: 20px;"><%= videos[i].title %></h1></span>
            <div class="text-muted mb-2">
                Published Date: <%=videos[i].uploaded_at.toLocaleDateString()%> 
               <% if(videos[i].updated_at != null) { %>
                    Last Updated: <%=videos[i].updated_at.toLocaleDateString()%>
                <% } %>
            </div>
            <div id="video" style="display: flex;">
                <% if(videos[i].filepath != 'undefined') { %>
                    <video src="<%= videos[i].filepath%>" controls type="video/*" style="float: left;" width='800' height='500' ></video>
                <% } else{ %>
                    <iframe src="<%= videos[i].url %>" width="500" height="300" style="float: left;"></iframe>
                <% } %>
            </div><br>
            <div><%- videos[i].description %></div>
        <% }    
    } %> 
  </div>
  </body>
