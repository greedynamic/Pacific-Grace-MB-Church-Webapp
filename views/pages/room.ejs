<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <script>
        const ROOM_ID = "<%= roomId %>";
    </script>
    <script src="https://kit.fontawesome.com/a90336667c.js" crossorigin="anonymous"></script>
    <script src="https://unpkg.com/peerjs@1.3.1/dist/peerjs.min.js" defer></script>
    <script src="/socket.io/socket.io.js" defer></script>
    <script src="index.js" defer></script>
    <script src="meetingServer.js" defer></script>
    <script src="meeting.js" defer></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p" crossorigin="anonymous"></script>
    <title>Room</title>
    <link rel="stylesheet" href="/stylesheets/room.css">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">
</head>
<body>
    <div class="main">
        <!-- videos -->
        <div class="main-left">
            <div class="main-videos">
                <!-- videos get appended here -->
                <div id="video-grid"></div>
            </div>
            <!-- controls -->
            <div class="main-controls">
                <div class="main-controls-block">
                    <div class="main-controls-button main-mute-button" onclick="muteUnmute()">
                        <i class="fa-solid fa-microphone"></i>
                        <span>Mute</span>
                    </div>
                    <div class="main-controls-button main-video-button" onclick="playStop()">
                        <i class="fa-solid fa-video"></i>
                        <span>Stop Video</span>
                    </div>
                </div>
                <div class="main-controls-block">
                    <div class="main-controls-button">
                        <i class="fa-solid fa-shield"></i>
                        <span>Security</span>
                    </div>
                    <div class="main-controls-button">
                        <i class="fa-solid fa-user-group"></i>
                        <span>Participants</span>
                    </div>
                    <div class="main-controls-button">
                        <i class="fa-solid fa-message"></i>
                        <span>Chat</span>
                    </div>
                </div>
                <div class="main-controls-block">
                    <div class="main-controls-button" onclick="">
                        <span class="leave-meeting">Leave Meeting</span>
                    </div>
                </div>
            </div>
        </div>
        <!-- chat -->
        <div class="main-right">
            <div class="main-header">
                <h6>Chat</h6>
            </div>
            <div class="main-chat-window">
                <ul class="messages"></ul>
            </div>
            <div class="main-message-container">
                <input id="chat-message" type="text" placeholder="Type message here...">
            </div>
        </div>
    </div>
</body>
</html>