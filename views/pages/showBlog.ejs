<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <!-- stylesheet -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" 
    integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">
     <!-- stylesheet -->
     <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" 
     integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">
     <link href="https://fonts.googleapis.com/css?family=Roboto:100,300,400,500,700" rel="stylesheet">
     <link href="vendor/bootstrap/css/bootstrap.min.css" rel="stylesheet">
 
     <!-- Additional CSS-->
     <link rel="stylesheet" href="assets/css/fontawesome.css">
     <link rel="stylesheet" href="assets/css/templatemo-style.css">
     <link rel="stylesheet" href="assets/css/owl.css">

    <% if (blogs.length > 0) { %>
        <title>Blog - <%= blogs[0].title %></title> 
    <% } %>
</head>
<body class="is-preload">
    <!-- Wrapper -->
    <div id="wrapper">

      <!-- Main -->
        <div id="main">
          <div class="inner">

            <!-- Header -->
            <header id="header">
              <div class="logo">
                <a href="https://church276.herokuapp.com/blog_home.html">Home</a>
              </div>
            </header>
            <div class="container primary-button">
                <% for(var i=0; i < blogs.length; i++) {
                     if (blogs.length > 0) { %>
                        <h1 class="mb-2"><%= blogs[0].title %></h1>
                        <div class="text-muted mb-2">
                            Published Date: <%=blogs[i].published_at.toLocaleDateString()%> 
                            <% if(blogs[i].updated_at != null) { %>
                                Last Updated: <%=blogs[i].updated_at.toLocaleDateString()%>
                            <% } %>
                        </div>
                        <a href="/blog/">All Blogs</a>
                        <a href="/blog/edit/<%= blogs[i].title %>">Edit</a>
                        <div class="mt-4" id="content">
                            <%- blogs[i].content %>
                        </div>
                    <% }    
                } %> 
            </div>
          
          </div>
        </div>
    </div>
</body>
</html>